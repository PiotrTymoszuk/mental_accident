doi = {10.1007/S00406-022-01476-8},
issn = {14338491},
journal = {European Archives of Psychiatry and Clinical Neuroscience},
keywords = {Alpine sports,Behavioral addiction,Exercise addiction,Mental health,Mountaineering},
number = {3},
