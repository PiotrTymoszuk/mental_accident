doi = {10.21105/joss.00765},
file = {:C\:/Users/piotr/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Drost - 2018 - Philentropy Information Theory and Distance Quantification with R.pdf:pdf},
